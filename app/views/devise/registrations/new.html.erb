<div class="container"> 
  <div class="uniform"> 
    <h1>uniform </h1> 
    L'inscription devient plus simple 
    <hr> 
    <ul>
      <li> Un seul formulaire pour toutes les écoles </li>
      <li> Gérez facilement vos candidatures </li>
      <li> Stockez vos données scolaires </li>

    </ul>
  </div>
  
  <div>
    <div>
      <h5> Entrez vos identifiants </h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        
        <%= f.email_field :email, autofocus: true, placeholder:"Adresse email", autocomplete: "email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <%= f.password_field :password, placeholder:"Mot de passe(#{@minimum_password_length} caratères minimum)", autocomplete: "off" %>
        <% else %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe" %>
        <% end %>
      </div>

      <div class="field">
        
        <%= f.password_field :password_confirmation, placeholder:"Confirmation du mot de passe", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Connexion" %>
      </div>
      <% end %>
    </div>


    <div class="login">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>